@Article{Wosnitza-Denz-2013,
  author               = {Wosnitza, Jan H. and Denz, Cornelia},
  date                 = {2013-09},
  journaltitle         = {Physica A: Statistical Mechanics and its Applications},
  title                = {Liquidity crisis detection: An application of log-periodic power law structures to default prediction},
