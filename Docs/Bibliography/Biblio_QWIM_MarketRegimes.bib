@InCollection{Markov-2015,
  author               = {Markov, Nikolay},
  booktitle            = {Monetary Policy in the Context of the Financial Crisis: New Challenges and Lessons},
  date                 = {2015-07},
  title                = {A Regime Switching Model for the European Central Bank},
  doi                  = {10.1108/s1571-038620150000024020},
