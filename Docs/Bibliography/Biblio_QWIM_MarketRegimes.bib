@Article{Sornette-Cauwels-2015,
  author               = {Sornette, Didier and Cauwels, Peter},
  date                 = {2015-10},
  journaltitle         = {Review of Behavioral Economics},
  title                = {Financial Bubbles: Mechanisms and Diagnostics},
