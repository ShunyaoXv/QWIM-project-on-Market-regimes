  publisher        = {Institute for Operations Research and the Management Sciences ({INFORMS})},
}

@Article{Koekebakker-Zakamulin-2021,
  author           = {Steen Koekebakker and Valeriy Zakamulin},
  date             = {2021-05},
  journaltitle     = {The Journal of Wealth Management},
  title            = {Warren Buffett versus Zvi Bodie: Should You Buy Or Sell Put Options?},
  doi              = {10.3905/jwm.2021.1.137},
  number           = {2},
  pages            = {65-81},
  volume           = {24},
  abstract         = {Academics and investment professionals often disagree when it comes to investment advice. Legendary investor Warren Buffett is a proponent of time diversification and firmly believes that stocks are less risky in the long run. Therefore, he often sells long-term put options instead of buying them for portfolio protection. By contrast, famous professor Zvi Bodie argues that time diversification is a fallacy and, therefore, his advice to fund managers is to buy long-term portfolio insurance. In this paper, we consider the optimal portfolio choice problem for a loss-averse investor. First, we demonstrate that our loss-averse investor subscribes to the principle of time diversification. In particular, our investor allocates more to stocks as the investment horizon lengthens. Second, we allow our investor to trade in stocks and put options. We find that when the investment horizon is short, our investor is better off with portfolio insurance. Conversely, when the investment horizon is long, our investor sells put options. That is, our loss-averse investor prefers Buffett's investment advice over Bodie's.},
  creationdate     = {2023-06-24T12:52:52},
  modificationdate = {2023-06-24T12:52:52},
  publisher        = {Pageant Media {US}},
}

@Article{Li-Zakamulin-2020,
  author           = {Xingyi Li and Valeriy Zakamulin},
  date             = {2020-04},
  journaltitle     = {Quantitative Finance},
  title            = {Stock volatility predictability in bull and bear markets},
  doi              = {10.1080/14697688.2020.1725101},
  number           = {7},
  pages            = {1149--1167},
  volume           = {20},
  abstract         = {The recent literature on stock return predictability suggests that it varies substantially across economic states, being strongest during bad economic times. In line with this evidence, we document that stock volatility predictability is also state dependent. In particular, in this paper, we use a large data set of high-frequency data on individual stocks and a few popular time-series volatility models to comprehensively examine how volatility forecastability varies across bull and bear states of the stock market. We find that the volatility forecast horizon is substantially longer when the market is in a bear state than when it is in a bull state. In addition, over all but the shortest horizons, the volatility forecast accuracy is higher when the market is in a bear state. This difference increases as the forecast horizon lengthens. Our study concludes that stock volatility predictability is strongest during bad economic times, proxied by bear market states.},
  creationdate     = {2023-06-24T12:52:52},
  modificationdate = {2023-06-24T12:52:52},
  publisher        = {Informa {UK} Limited},
  timestamp        = {2020-10-02 11:44},
}

@Article{Li-Zakamulin-2019a,
  author           = {Li, Xingyi and Zakamulin, Valeriy},
  date             = {2019},
  journaltitle     = {SSRN e-Print},
  title            = {The term structure of volatility predictability},
  doi              = {10.2139/ssrn.3350362},
  issn             = {1556-5068},
