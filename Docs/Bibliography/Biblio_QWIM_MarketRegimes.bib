}

@Article{Kim-2012,
  author               = {Kim, Woo C.},
  date                 = {2012-12},
  journaltitle         = {Journal of Korean Institute of Industrial Engineers},
  title                = {Dynamic Asset Allocation by Applying Regime Detection Analysis},
  doi                  = {10.7232/jkiie.2012.38.4.258},
  issn                 = {1225-0988},
  number               = {4},
  pages                = {258--261},
  volume               = {38},
  abstract             = {In this paper, I propose a new asset allocation framework to cope with the dynamic nature of the financial market. The investment performance can be much improved by protecting the capital from the market crashes, and such crashes can be pre-identified with high probabilities by regime detection analysis via a specialized unsupervised machine learning technique.},
