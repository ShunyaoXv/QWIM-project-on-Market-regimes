  day                  = {21},
  groups               = {Regime based investing, Regime_Invest, Invest_Dynamic, Regime_Model, PortfOptim_Regime, PortfOptim_Dynamic, Invest_Regime},
  posted-at            = {2017-07-30 07:58:14},
