  journaltitle         = {Quantitative Finance Letters},
  title                = {The bond-stock earnings yield differential model: additional applications and other models for stock market crash prediction},
  doi                  = {10.1080/21649502.2015.1165905},
  number               = {1},
  pages                = {26--34},
  volume               = {4},
