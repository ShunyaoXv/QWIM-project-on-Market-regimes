@InCollection{MacLean-Zhao-2017,
  author               = {MacLean, Leonard and Zhao, Yonggan},
  booktitle            = {Optimal Financial Decision Making under Uncertainty},
  date                 = {2017},
  title                = {Asset Price Dynamics: Shocks and Regimes},
  doi                  = {10.1007/978-3-319-41613-7\_2},
