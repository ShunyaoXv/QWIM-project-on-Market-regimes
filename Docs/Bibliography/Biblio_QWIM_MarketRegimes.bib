  author               = {Sornette, Didier and Woodard, Ryan and Yan, Wanfeng and Zhou, Wei-Xing},
  date                 = {2013-10},
  journaltitle         = {Physica A: Statistical Mechanics and its Applications},
  title                = {Clarifications to questions and criticisms on the Johansen Ledoit Sornette financial bubble model},
