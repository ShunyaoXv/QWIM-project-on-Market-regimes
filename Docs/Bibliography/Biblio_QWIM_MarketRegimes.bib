@Article{Yao-Li-2021,
  author           = {Can-Zhong Yao and Hong-Yu Li},
  date             = {2021},
  journaltitle     = {The North American Journal of Economics and Finance},
  title            = {A study on the bursting point of Bitcoin based on the {BSADF} and {LPPLS} methods},
